<!DOCTYPE html>
<html>

<head>
    <% include static/header %>
</head>

<body>
    <% include static/menu %>
        <div class="container-fluid">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/management"">Management</a></li>
                    <li class=" breadcrumb-item active" aria-current="page">Show details</li>
                </ol>
            </nav>
            <div class="row justify-content-center">
                <div class="col col-auto">
                    <h3 class="h3Title">
                        <%= page %>
                    </h3>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-evenly show-details">
                <div class="col col-lg-3">
                    <h4>Bike (<%= bike[3] %>)</h4>
                    <ul>
                        <li><span>Reg. date: </span>
                            <%= moment.unix(bike[0]).format('DD/MM/YYYY') %>
                        </li>
                        <li><span>Make: </span>
                            <%= bike[1] %>
                        </li>
                        <li><span>Model: </span>
                            <%= bike[2] %>
                        </li>
                        <li><span>Frame: </span>
                            <%= bike[3] %>
                        </li>
                    </ul>
                    <h4>Current Owner</h4>
                    <ul>
                        <li><span>Name: </span>
                            <%= owner[0] %>
                        </li>
                        <li><span>Email: </span>
                            <%= owner[1] %>
                        </li>
                    </ul>
                </div>
                <div class="col col-lg-5 d-none d-sm-block">
                    <div>
                        <h4>Historic details <span class="span-add-details">(<a
                                    href="/add-details?bike_id=<%= bike_id %>">Add new</a>)</span></h4>
                    </div>

                    <% if (details.length !=0) { %>
                        <ul>
                            <% for(var i=0; i < details.length; i++) { %>
                                <li>
                                    <%= moment.unix(details[i][1]).format('DD/MM/YYYY') %> - <%= details[i][2] %>
                                </li>
                                <% } %>
                        </ul>
                        <% } else { %>
                            <p>No details added yet</p>
                            <% } %>
                </div>
            </div>
        </div>
        <br>
        </div>
        <br>
        <% include static/footer %>
</body>
<% include static/scripts %>

</html>