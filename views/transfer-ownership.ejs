<!DOCTYPE html>
<html>

<head>
    <% include static/header %>
</head>

<body>
    <% include static/menu %>
        <div class="container-fluid">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/management"">Management</a></li>
                    <li class=" breadcrumb-item active" aria-current="page">Transfer ownership</li>
                </ol>
            </nav>
            <div class="row justify-content-center">
                <div class="col col-auto">
                    <h3 class="h3Title">
                        <%= page %>
                    </h3>
                </div>
            </div>
            <br>
        </div>
        <div class="container">
            <form action="/transfer-ownership" method="post">
                <div class="row justify-content-center">
                    <div class="col col-lg-4">
                        <h4>Bike (<%= bike[3] %>)</h4>
                        <ul>
                            <li><span>Reg. date: </span>
                                <%= moment.unix(bike[0]).format('DD/MM/YYYY') %>
                            </li>
                            <li><span>Make: </span>
                                <%= bike[1] %>
                            </li>
                            <li><span>Model: </span>
                                <%= bike[2] %>
                            </li>
                            <li><span>Frame: </span>
                                <%= bike[3] %>
                            </li>
                        </ul>
                        <h4>Owner info</h4>
                        <ul>
                            <li><span>Name: </span>
                                <%= owner[0] %>
                            </li>
                            <li><span>Email: </span>
                                <%= owner[1] %>
                            </li>
                        </ul>
                    </div>
                    <div class="col col-lg-4">
                        <div class="form-group">
                            <label class="lblInput" for="inputName">New Name:</label>
                            <input type="text" class="input-style form-control" name="inputName" id="inputName"
                                placeholder="Name..." required>
                        </div>
                        <div class="form-group">
                            <label class="lblInput" for="inputEmail">New Email:</label>
                            <input type="text" class="input-style form-control" name="inputEmail" id="inputEmail"
                                placeholder="Email..." required>
                        </div>
                        <div class="form-group">
                            <label class="lblInput" for="inputNewAddress">New Address:</label>
                            <input type="text" class="input-style form-control" name="inputNewAddress"
                                id="inputNewAddress" placeholder="e.g. 0xf13da1dBd190c4A839ECB674e08cfB82eA804222"
                                required>
                            <div class="text-center" style="margin-top: 10px;">
                                <button type="submit" class="btn btn-secondary btn-sm">Send</button>
                                <button type="reset" class="btn btn-warning btn-sm">Reset</button>
                            </div>
                        </div>
                        <input type="hidden" name="bike_id" value="<%= bike_id %>">
                    </div>
                </div>
            </form>
        </div>
        <% include static/footer %>
</body>
<% include static/scripts %>

</html>